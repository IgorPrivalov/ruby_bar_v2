<div class="row">
<% if mode == :edit %>
  <%= form_for coctaile, url: admin_ajax_coctaile_path(coctaile), method: :put, remote: true do |f| %>
    <div class="col-sm-10"><%= f.text_field(:name) %></div>
    <%= button_tag(class: "btn btn-default col-sm-2") do %>
      <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
    <% end %>
  <% end %>
<% else %>
  <%= link_to coctaile.name, admin_coctaile_path(coctaile), remote: true, class: "col-sm-10" %>
  <%= link_to edit_admin_ajax_coctaile_path(coctaile), remote: true, class: "btn btn-default col-sm-2" do %>
    <span class="glyphicon glyphicon-pencil"></span>
  <% end %>
<% end %>
</div>
