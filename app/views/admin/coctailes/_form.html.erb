<div class="body_panel panel-default">
  <div class="panel-body">
    <%= form_field_text(f, :name) %>
    <div class="row form-group">
      <div class="col-sm-3"><%= image_tag(@coctaile.image_url, size: '280', class: "img-thumbnail") if @coctaile.image? %></div>
      <div class="col-sm-9 form-group">
        <div class="field form-group">
          <%= f.label "Ingredients:" %>
        </div>
        <%= form_ingredients(f, :value, :product,:product_id, Product.all, :id, :name, {prompt: true}, {}) %>
       </div>
    </div>
    <div class="field form-group">
      <%= f.label :image, class: "col-md-2 control-label" %>
      <div class="col-sm-3">
        <%= f.file_field :image, multiple: false %>
      </div>
    </div>
    <% if @coctaile.image? %>
        <div class="field form-group">
          <div class="col-md-2 control-label"></div>
          <div class="col-sm-5">
            <%= f.check_box :remove_image %> Remove image
          </div>
        </div>
    <% end %>
  </div>
</div>
<div class="actions form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Save" %>
  </div>
</div>