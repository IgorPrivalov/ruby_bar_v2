<div class="page-header">
  <h1> <%= link_to image_tag(@ingredient.coctaile.image_url, size: '100', class: 'img-thumbnail'), admin_coctaile_path(@ingredient.coctaile) %>
  <%= "#{@ingredient.coctaile.name} #{action_name}" %>
  <small><%= controller_name.humanize.singularize %></small></h1>
</div>

<div class="body_panel panel-default">
  <div class="panel-body">
    <div class="field form-group">
      <%= f.label :value, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :value, class: "form-control" %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :product, class: "col-md-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :product_id, Product.all, :id, :name, class: "form-control" %>
      </div>
    </div>
    <%= f.hidden_field :coctaile_id, value: params[:coctaile_id] %>
    <div class="actions form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Save" %>
        </div>
    </div>
  </div>
</div>